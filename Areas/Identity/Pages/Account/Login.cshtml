@page
@model SoftWC.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login - Tally";
}
<!-- Cargar SweetAlert en Scripts al final -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["LogoutSuccess"] != null && TempData["LogoutSuccess"].ToString() == "True")
    {
        <text>
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Sesión cerrada',
                text: 'Has cerrado sesión correctamente.',
                confirmButtonColor: '#C48DEB',
                background: '#D5D9FF'
            });
        </script>
        </text>
    }
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="row shadow-lg rounded w-100 mx-2" style="max-width: 900px; background-color: white;">
        
        <!-- Lado Izquierdo -->
        <div class="col-12 col-md-6 p-5 text-center" style="background-color: #eef3fc;">
            <img src="https://firebasestorage.googleapis.com/v0/b/appweb2-44bcb.appspot.com/o/main_logo-rb.png?alt=media&token=b35b6b37-eaeb-482a-9374-bbc0d8d3fc69" alt="Logo" style="max-height: 100px;" class="mb-4 img-fluid" />
            <h4 class="mb-3 fw-bold">¡Bienvenido a la Plataforma de Tareos!</h4>
            <p class="text-muted">
                Registra, gestiona y consulta tus horas trabajadas de forma rápida y eficiente.
                Inicia sesión para mantener tu información actualizada y al alcance de un clic.
            </p>
        </div>

        <!-- Lado Derecho -->
        <div class="col-12 col-md-6 p-5">
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-dark mb-4 d-block">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
            <h4 class="fw-bold">¡Le damos la bienvenida!</h4>
            <p class="text-muted mb-4">Inicie sesión en su cuenta</p>

            <form method="post">
                <div class="mb-4">
                    <label for="DNI" class="form-label fw-semibold">DNI:</label>
                    <input asp-for="Input.DNI" class="form-control form-control-lg" placeholder="Introduzca DNI" />
                    <span asp-validation-for="Input.DNI" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label for="Password" class="form-label fw-semibold">Password:</label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Introduzca Password" type="password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-4 d-flex justify-content-between">
                    <a asp-page="./ForgotPassword" class="text-success fw-semibold">¿Olvidó su contraseña?</a>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Iniciar sesión</button>
            </form>

            <hr class="my-4" />
            <p class="text-center text-muted">© 2025 Tally - GLOM</p>
        </div>
    </div>
</div>