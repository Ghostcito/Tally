@page
@model SoftWC.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login - Tally";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100 p-3 login-container">
    <div class="row login-card w-100 mx-2" style="max-width: 1000px;">
        
        <!-- Lado Izquierdo -->
        <div class="col-12 col-md-6 left-panel">
            <div class="logo-container">
                <img src="https://firebasestorage.googleapis.com/v0/b/appweb2-44bcb.appspot.com/o/main_logo-rb.png?alt=media&token=b35b6b37-eaeb-482a-9374-bbc0d8d3fc69" 
                     alt="Tally Logo" />
            </div>
            <h2>¡Bienvenido a Tally!</h2>
            <p>
                La plataforma integral para el registro y gestión de tareos.
                Controla tus horas trabajadas de forma eficiente y mantén toda
                tu información actualizada en tiempo real.
            </p>
        </div>

        <!-- Lado Derecho -->
        <div class="col-12 col-md-6 right-panel">
            <a asp-action="Index" asp-controller="Home" class="back-link">
                <i class="bi bi-arrow-left"></i>
                <span>Volver al inicio</span>
            </a>

            <h1 class="welcome-title">Iniciar Sesión</h1>
            <p class="welcome-subtitle">Ingresa tus credenciales para continuar</p>

            <form method="post">
                <div class="input-group-custom">
                    <label for="DNI">DNI</label>
                    <div class="input-wrapper">
                        <i class="bi bi-person-badge"></i>
                        <input asp-for="Input.DNI" 
                               class="form-control-custom" 
                               placeholder="Ingresa tu DNI" />
                    </div>
                    <span asp-validation-for="Input.DNI" class="text-danger"></span>
                </div>

                <div class="input-group-custom">
                    <label for="Password">Contraseña</label>
                    <div class="input-wrapper">
                        <i class="bi bi-lock-fill"></i>
                        <input asp-for="Input.Password" 
                               class="form-control-custom" 
                               placeholder="Ingresa tu contraseña" 
                               type="password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-4 text-end">
                    <a asp-page="./ForgotPassword" class="forgot-password">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

                <button type="submit" class="btn-login">
                    Iniciar Sesión
                </button>
            </form>

            <div class="footer-text">
                <p class="mb-0">© 2025 Tally - GLOM. Todos los derechos reservados.</p>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    @if (TempData["LogoutSuccess"] != null && TempData["LogoutSuccess"].ToString() == "True")
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Sesión cerrada',
                text: 'Has cerrado sesión correctamente.',
                confirmButtonColor: '#0085CA',
                background: '#ffffff'
            });
        </script>
    }
}

</body>
</html>