                            aria-valuenow="@ViewBag.TotalEmpleados" 
                            aria-valuemin="0" 
                            aria-valuemax="@(ViewBag.TotalEmpleados + 10)">
                        </div>
                    </div>
                </div>
            </div>
        </div>
