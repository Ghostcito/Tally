<!DOCTYPE html>
<html lang="en" style="background: linear-gradient(to bottom, #D5D9FF, #FFFFFF);">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftWC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftWC.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-default fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light  shadow"
            style="background-color: #D5D9FF;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://firebasestorage.googleapis.com/v0/b/appweb2-44bcb.appspot.com/o/main_logo-rb.png?alt=media&token=b35b6b37-eaeb-482a-9374-bbc0d8d3fc69"
                        alt="SoftWC Logo" style="height: 60px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" asp-area="" asp-controller="Home"
                                asp-action="Index">Inicio</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" href="https://www.ejemplo.com/contacto" target="_blank">Contactanos</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-white bg-dark px-3 rounded" asp-area="Identity"
                                asp-page="/Account/Login">Modulo de Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="" style="margin-top: 3.2em">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light py-3 mt-5">
        <div class="container text-center">
            &copy; 2025 - Tally - GLOM. Todos los derechos reservados.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
